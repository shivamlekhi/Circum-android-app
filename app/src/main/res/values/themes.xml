<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/TabStyle</item>
        <item name="android:actionBarTabTextStyle">@style/TabTextStyle</item>
        <item name="android:actionBarDivider">@null</item>
        <!--
                <item name="android:actionBarDivider">@style/DividerStyle</item>
        -->
    </style>

    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/madcar_redorange</item>
    </style>

    <style name="TabStyle">
        <item name="android:background">@drawable/tab_bar_background</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="DividerStyle">
        <item name="android:background">#f0f0f0</item>
    </style>
</resources>