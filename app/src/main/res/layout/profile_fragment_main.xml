                    android:text="@string/lipsum"/>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/edit_profile_description_button"
                    android:gravity="center"
                    android:alpha="0.8"
                    android:background="#ddd"
                    android:minHeight="100dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Description"
                        android:padding="10dp"
                        android:textColor="#fff"
                        android:background="@color/nephritis"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/intrestsHeaderBar"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IntrestskHeaderText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intrests"
                        android:textColor="@color/concrete"
                        android:gravity="center_vertical"
                        android:padding="7dp"
                        android:textSize="14dp"/>

                    <LinearLayout
                        android:gravity="right"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:id="@+id/EditIntrestsButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit"
                            android:textColor="#fff"
                            android:layout_margin="3dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="#aaa"
                            android:textSize="12dp"/>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_below="@+id/intrestsHeaderBar"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#ddd"
                    />

                <LinearLayout
                    android:background="#fff"
                    android:layout_below="@+id/intrestsHeaderBar"
                    android:padding="0dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <include layout="@layout/intrests_fragment" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:background="@drawable/drop_shadow"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/FacebookHeaderText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Facebook"
                    android:textColor="@color/concrete"
                    android:gravity="center_vertical"
                    android:padding="7dp"
                    android:textSize="14dp"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#ddd"
                    />

                <android.support.v4.view.ViewPager
                    android:id="@+id/facebook_view_pager"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/drop_shadow"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TwitterHeaderText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Twitter"
                    android:textColor="@color/concrete"
                    android:gravity="center_vertical"
                    android:padding="7dp"
                    android:textSize="14dp"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#ddd"
                    />

                <android.support.v4.view.ViewPager
                    android:id="@+id/TweetsSlider"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"/>
            </LinearLayout>
        </LinearLayout>


