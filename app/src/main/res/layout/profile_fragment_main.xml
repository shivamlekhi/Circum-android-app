<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="250dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#f0f0f0"
                android:src="@drawable/sandy"
                android:scaleType="centerCrop"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#2e2e2e"
                android:alpha="0.5"/>

            <LinearLayout
                android:id="@+id/profile_pic_holder_layout"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="150dp">

                <LinearLayout
                    android:weightSum="4"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="fill_parent">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/range"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="54"
                            android:textColor="#fff"
                            android:textSize="14dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:src="@drawable/image"
                            android:id="@+id/profile_main_image"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:padding="2dp"
                            android:background="@drawable/circle_border"/>

                        <TextView
                            android:id="@+id/ProfileFragmentNameVie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shivam Lekhi"
                            android:textColor="#fff"
                            android:textSize="20dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="fill_parent">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/users_tab"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="84"
                            android:textColor="#fff"
                            android:textSize="14dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_below="@+id/profile_pic_holder_layout"
                android:id="@+id/ProfileDescriptionTex"
                android:layout_width="fill_parent"
                android:textColor="#fff"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:textSize="12dp"
                android:layout_height="wrap_content"
                android:text="@string/lipsum"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/edit_profile_picture_button"
                android:gravity="right|bottom"
                android:alpha="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:alpha="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_red_background">

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="right"
            android:layout_marginTop="-25dp"
            android:orientation="horizontal"
            android:weightSum="4">


            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="bottom"
                android:paddingLeft="10dp"
                android:textColor="#aaa"
                android:layout_height="fill_parent"
                android:text="25 Miles away from you"/>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ProfileFragmentNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shivam Lekhi"
                    android:textColor="#555"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/ProfileFragmentPingsView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="21 Pings"
                    android:textColor="#aaa"/>

                <TextView
                    android:id="@+id/ProfileFragmentFriendsView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="21 Friends"
                    android:textColor="#aaa"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="right"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/profile_ping_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/circle_red_background">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/range"
                        android:layout_margin="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--
            <View
